{
  "arrowParens": "avoid",
  "endOfLine": "auto",
  "singleQuote": true,
  "trailingComma": "all",
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 100,
  "semi": false,
  "importOrder": [
    "^[next|react](-dom)?(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/(.*)$",
    "^\\./(.*)$",
    "^\\.\\./(.*)"
  ],
  "importOrderSeparation": true,
  "importOrderParserPlugins": ["typescript", "decorators", "jsx"],
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"]
}
